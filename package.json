{
  "name": "dnscrypt-proxy-ui",
  "version": "1.0.0",
  "description": "A modern web interface for DNSCrypt-Proxy",
  "type": "module",
  "main": "src/services/Server.ts",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node src/services/Server.ts",
    "client": "vite",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build:css": "tailwindcss -i ./src/index.css -o ./src/output.css --watch",
    "build": "vite build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{css,md}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@iarna/toml": "^3.0.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "tailwindcss": "^3.4.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.5.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Ricardo Espirito Santo <ricardoespsantos@gmail.com>",
  "license": "MIT"
}
